# Example env file for Mercado Pago integration
# Put your real secrets in a local .env (do NOT commit it to git)

# Backend secret access token (Mercado Pago) - used only on server
MERCADOPAGO_ACCESS_TOKEN=YOUR_MERCADO_PAGO_ACCESS_TOKEN_HERE

# Frontend public key for Mercado Pago JS SDK (starts with "APP_USR..." or similar)
VITE_MP_PUBLIC_KEY=YOUR_MERCADO_PAGO_PUBLIC_KEY_HERE

# Where to redirect user after approved payment (WhatsApp group link)
VITE_WHATSAPP_GROUP_LINK=https://chat.whatsapp.com/YOUR_GROUP_LINK_HERE

# Base URL where your frontend is served (used to build back_urls)
VITE_API_BASE_URL=http://localhost:5173

# Optional override for server listen port
PORT=3001
